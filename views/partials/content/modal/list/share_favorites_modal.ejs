<div class="modal fade" id="shareFavoritesModal" tabindex="-1" role="dialog" aria-labelledby="shareFavoritesModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="shareFavoritesModalLabel">Share your favorites list</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="input-group mb-3">
          <input id="favorites-display-name-input" type="text" class="form-control" placeholder="User display name...">
        </div>
        <div class="input-group mb-3">
          <textarea id="shareable-url" class="form-control" placeholder="Share this url..." rows="6"></textarea>
        </div>
      </div>
      <small id="copied-message" class="text-secondary hide_me">Copied!</small>
      <div class="modal-footer">
        <button id="get-shareable-link" type="button" class="btn btn-outline-primary" data-clipboard-target="#shareable-url">Get shareable link</button>
      </div>
    </div>
  </div>
</div>