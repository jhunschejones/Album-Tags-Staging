<div id="list-filters" class="sticky-top">
  <button id="to-top-button" class="btn btn-sm btn-light float-left"><img id="up_arrow" src="/images/up_arrow_dark.png" style="width:23px;margin-top:1px;opacity:0.55;margin-bottom:3px;"><span class="large-button-text" style="margin-left:3px;">Top</span></button>

  <button id="add-album-button" class="btn btn-sm btn-light float-left"><span class="large-button-text" style="margin-right:5px;">Add Album</span><img src="/images/add-icon.png" class="mobile-button-icon" style="height:19px;opacity:0.9;margin-top:-2px;margin-right:0px;margin-bottom:1px;"></button>

  <button id="share-favorites-button" class="btn btn-sm btn-light float-left"><span class="large-button-text" style="margin-right:5px;">Share Favorites</span><img src="/images/share.png" class="mobile-button-icon" style="height:23px;opacity:0.6;margin-top:-5px;margin-bottom:-2px;margin-left:-1px;margin-right:-2px;"></button>

  <button id="edit-button" class="btn btn-sm btn-light float-left"><span class="large-button-text" style="margin-right:5px;">Edit List</span><img src="/images/edit-icon.png" class="mobile-button-icon" style="height:20px;opacity:0.65;margin-top:-3px;margin-right:-2px;margin-left:1px;"></button>

  <button id="clear-filters-button" class="btn btn-sm btn-light float-right remove-if-no-albums"><span class="large-button-text">Clear Filters</span><img src="/images/clear-icon.png" class="mobile-button-icon" style="height:20px;margin-top:0px;margin-bottom:1px;opacity:0.8;"></button>

  <div class="dropdown float-right remove-if-no-albums">
    <button id="filter-by-year-button" class="btn btn-sm btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="large-button-text">Filter by Year</span><img src="/images/calendar-icon.png" class="mobile-button-icon" style="height:20px;margin-top:0px;margin-bottom:1px;opacity:0.7;"></button>
    <div id="year-filter-dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="filter-by-year-button"></div>
  </div>

  <div class="dropdown float-right remove-if-no-albums">
    <button id="filter-by-genre-button" class="btn btn-sm btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="large-button-text">Filter by Genre</span><img src="/images/genre.png" class="mobile-button-icon" style="height:20px;margin-top:2px;"></button>
    <div id="genre-filter-dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="filter-by-genre-button"></div>
  </div>

  <div class="dropdown float-right remove-if-no-albums">
    <button id="filter-by-artist-button" class="btn btn-sm btn-light dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="large-button-text">Filter by Artist</span><img src="/images/artist-icon.png" class="mobile-button-icon" style="height:20px;margin-top:0px;margin-bottom:2px;opacity:0.65;"></button>
    <div id="artist-filter-dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="filter-by-artist-button"></div>
  </div>
</div>